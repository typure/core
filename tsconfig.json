{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "outDir": "temp",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@typure/*": ["packages/*/src"]
    }
  }
}
