{
  "name": "typurejs",
  "version": "1.0.0",
  "description": "Typure is a lightweight TypeScript framework that focuses on native HTML development and componentization.",
  "engines": {
    "node": ">= 14.0.0",
    "pnpm": ">= 6.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build:cli": "pnpm --dir ./packages/typure-cli build",
    "build:shared": "pnpm --dir ./packages/shared build",
    "build:core": "pnpm --dir ./packages/typure-core build",
    "build:merge": "pnpm run build:cli && pnpm run build:shared",
    "dev": "pnpm --dir ./packages/typure-ui dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wangyewei/Typurejs.git"
  },
  "keywords": [
    "typescript",
    "html",
    "framework",
    "native",
    "html",
    "javsascript",
    "front-end"
  ],
  "author": "wangyewei <wangyewei1@foxmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wangyewei/Typurejs/issues"
  },
  "homepage": "https://github.com/wangyewei/Typurejs#readme",
  "dependencies": {
    "typescript": "^5.0.4",
    "@typure/cli": "^0.0.1"
  }
}